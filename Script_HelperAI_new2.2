Function mySplit(String_Data, str1, Model, Num)	'mySplit("a|b|c|d","|","B",1) 返回倒三角字串第一位		
	Dim myArray									'eg."B"a|b|c|d    则返回:b|c|d   第二位c|d  第三位 d  超出返回 0
	Dim Err										'eg."F"正三角模式   则返回:a  a|b  a|b|c  a|b|c|d  表示0-3位 Error:超出返回 0
	Dim Len, i									'eg."G"取点模式 返回指定点的值
	Dim Text
'initial:
	Text = ""
	Err = 0
	myArray = split(String_Data, str1)
	Len = UBound(myArray)
'Trans:
	Select Case Model
		Case "b", "B", "back", "Back"
			Goto mySplit_Back_Model
		Case "f", "F", "first", "First"
			Goto mySplit_First_Model
		Case "g", "G", "get", "Get"
			Goto mySplit_Get_Model
		Case Else
			Goto mySplit_Return
	End Select
'Model:Back
Rem mySplit_Back_Model
	If (Num > Len) Then 
		Err = 0
		Goto mySplit_Return
	Else 
		
		If (Num > 0) Then 
			If (Num < Len) Then 
				Text = myArray(Num)
				For i = Num+1 To Len
					Text=Text&"|" &myArray(i)
				Next
				Err = Text
			Else 
				Err = myArray(Len)
			End If
		Else 
			Err = String_Data
		End If
	End If
	Goto mySplit_Return
'Model:First
Rem mySplit_First_Model
	If (Num > Len) Then 
		Err = 0
		Goto mySplit_Return
	Else 
		If (Num > 0) Then 
			If (Num < Len) Then 
				Text = myArray(0)
				For i = 1 To Num
					Text = Text & "|" & myArray(i)	
				Next
				Err = Text
			Else 
				Err = String_Data
			End If
		Else 
			Err = myArray(0)
		End If
		
	End If
	Goto mySplit_Return
'Model:Get
Rem mySplit_Get_Model
	If (Num > Len) Then 
		Err = 0
		Goto mySplit_Return
	Else 
		Err = myArray(Num)	
	End If
	Goto mySplit_Return
'return:
Rem mySplit_Return
	mySplit = Err
End Function
